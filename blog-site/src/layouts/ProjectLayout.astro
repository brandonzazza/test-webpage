---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    tags: string[];
    github?: string;
    demo?: string;
    date?: Date;
  };
}

const { frontmatter } = Astro.props;
const { title, description, tags, github, demo } = frontmatter;
---

<BaseLayout title={title} description={description}>
  <article class="project">
    <div class="container">
      
      <header class="project-header">
        <a href="/projects" class="back-link">‚Üê Back to projects</a>
        
        <h1 class="project-title">{title}</h1>
        <p class="project-description">{description}</p>
        
        <div class="project-meta">
          <div class="project-tags">
            {tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          
          {(github || demo) && (
            <div class="project-links">
              {github && (
                <a href={github} target="_blank" rel="noopener" class="project-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                  </svg>
                  View Source
                </a>
              )}
              {demo && (
                <a href={demo} target="_blank" rel="noopener" class="project-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                    <polyline points="15 3 21 3 21 9"/>
                    <line x1="10" y1="14" x2="21" y2="3"/>
                  </svg>
                  Live Demo
                </a>
              )}
            </div>
          )}
        </div>
      </header>

      <div class="project-content">
        <slot />
      </div>

    </div>
  </article>
</BaseLayout>

<style>
  .project {
    padding: var(--space-2xl) 0 var(--space-3xl);
  }

  .project-header {
    max-width: var(--max-width-prose);
    margin-bottom: var(--space-2xl);
  }

  .back-link {
    display: inline-block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .project-title {
    font-size: clamp(1.5rem, 5vw, 2.25rem);
    font-weight: 600;
    line-height: 1.25;
    margin-bottom: var(--space-md);
  }

  .project-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .project-meta {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    padding: var(--space-sm) var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  .project-link:hover {
    color: var(--color-accent);
    background: var(--color-accent-subtle);
  }

  /* Content Styles */
  .project-content {
    max-width: var(--max-width-prose);
  }

  .project-content :global(h2) {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    font-size: clamp(1.25rem, 3vw, 1.375rem);
  }

  .project-content :global(h3) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
    font-size: clamp(1.0625rem, 2.5vw, 1.125rem);
  }

  .project-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.75;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
    color: var(--color-text-secondary);
  }

  .project-content :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.7;
  }

  .project-content :global(blockquote) {
    margin: var(--space-lg) 0;
    padding: var(--space-md) var(--space-lg);
    border-left: 3px solid var(--color-accent);
    background: var(--color-bg-secondary);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }

  .project-content :global(blockquote p) {
    margin: 0;
    color: var(--color-text-secondary);
  }

  .project-content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-color: var(--color-accent-subtle);
    text-underline-offset: 3px;
  }

  .project-content :global(a:hover) {
    text-decoration-color: var(--color-accent);
  }

  .project-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-lg) 0;
  }

  .project-content :global(hr) {
    margin: var(--space-2xl) 0;
    border: none;
    border-top: 1px solid var(--color-border);
  }

  .project-content :global(strong) {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .project {
      padding: var(--space-xl) 0 var(--space-2xl);
    }

    .project-meta {
      flex-direction: column;
    }
  }
</style>
