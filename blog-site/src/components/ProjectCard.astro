---
interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
  github?: string;
  demo?: string;
}

const { title, description, tags, slug, github, demo } = Astro.props;
---

<article class="project-card">
  <div class="project-header">
    <h3 class="project-title">
      <a href={`/projects/${slug}`} class="project-title-link">{title}</a>
    </h3>
    {(github || demo) && (
      <div class="project-icons">
        {github && (
          <a href={github} target="_blank" rel="noopener" aria-label="View source" class="icon-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          </a>
        )}
        {demo && (
          <a href={demo} target="_blank" rel="noopener" aria-label="View demo" class="icon-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>

  <a href={`/projects/${slug}`} class="project-body">
    <p class="project-description">{description}</p>
  </a>

  <div class="project-tags">
    {tags.map((tag) => (
      <span class="project-tag">{tag}</span>
    ))}
  </div>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: border-color var(--transition-fast);
  }

  .project-card:hover {
    border-color: var(--color-border-hover);
  }

  .project-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .project-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
    flex: 1;
    min-width: 0;
  }

  .project-title-link {
    color: inherit;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .project-title-link:hover {
    color: var(--color-accent);
  }

  .project-icons {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-shrink: 0;
  }

  .icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
  }

  .icon-link:hover {
    color: var(--color-accent);
    background: var(--color-accent-subtle);
  }

  .project-body {
    display: block;
    text-decoration: none;
    flex: 1;
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-md) 0;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: auto;
  }

  .project-tag {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-text-muted);
    padding: 2px 6px;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
  }
</style>
